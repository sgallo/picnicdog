<h1>New group</h1>

<% form_for(@group) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name, :style => "width: 300px" %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :class => "food_box" %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<center><%= link_to 'Return To Group List', groups_path %></center>
